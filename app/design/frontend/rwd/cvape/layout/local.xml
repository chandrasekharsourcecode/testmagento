<?xml version="1.0"?>
<layout>
    <default>
        <reference name="head">
            <action method="removeItem"><type>skin_css</type><name>css/styles.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/bootstrap.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/font-awesome.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/owl.carousel.min.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/listnav.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/scrollbar.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/jquery.mCustomScrollbar.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/site.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/site_navigation.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/responsive.css</name></action>
        </reference>
        
        <!--Add phtml file to add js files just before body end-->
        <reference name="before_body_end">
            <block type="page/html_head" name="footer.javascript" template="page/html/footer/javascript.phtml" />
        </reference>
        
        <reference name="footer.javascript">
            <action method="addItem"><type>skin_js</type><name>js/jquery-1.11.3.min.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/jQuery-no-conflict.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/bootstrap.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/owl.carousel.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/bootstrap-number-input.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery-asHoverScroll.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery.mCustomScrollbar.concat.min.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery-listnav.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/site.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/mCustScrollInit.js</name><params/></action>
        </reference>
        
        <!--Create new reference for main navigation-->
        <reference name="root">
            <block type="core/text_list" name="main.navigation" as="main.navigation" translate="label">
                <label>New Reference</label>
            </block>
        </reference>
        <reference name="main.navigation">
            <block type="core/template" name="main.navigation.block" template="catalog/category/main-navigation.phtml" />
        </reference>
            
    </default>
</layout>